{
    "manifest_version": 3,
    "name": "Web Scraper",
    "description": "Javascript extension to record user's usage data in web applications/sites related to urls, paths travelled, actions taken and pages structure.",
    "author": "Pedro Carvalho",
    "host_permissions": [
        "*://*/",
        "http://*/",
        "https://*/",
        "http://127.0.0.1:8000/"
    ],
    "permissions": [
        "tabs",
        "cookies",
        "storage"
    ],
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Web Scraper",
        "default_icon": {
            "16": "img/icon16.png",
            "24": "img/icon24.png",
            "32": "img/icon32.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "Content.js"
            ]
        }
    ],
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    }
}